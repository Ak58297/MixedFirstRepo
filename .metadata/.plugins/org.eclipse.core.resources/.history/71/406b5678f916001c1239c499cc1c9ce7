
public class Max_no_in_column {
	public static void main(String[] args) {
		int arr[][] = { { 0, 3, 5 }, { 4, -5, 9 }, { -1, 35, 2 } };
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				System.out.print(arr[i][j] + "\t");
			}
			System.out.println();
		}

		int min = arr[0][0];

		for (int i = 0; i < 3; i++) 
		{
			for (int j = 0; j < 3; j++)
			{
				if (arr[i][j] < min) {
					min = arr[i][j];
				}
			}

		}
		//Find the max number in the column of ,minimum number
		System.out.println("Minimum number = " + min+" and the column is ");
		
		//Column for minimum number
		
		

	}
}
