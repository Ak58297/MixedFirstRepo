import java.util.Scanner;

public class test {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		 Scanner sc=new Scanner(System.in);
	        String A=sc.next();
	        
	    
	        String rev="";
	        for (int i=A.length()-1;i>=0;i--)
	        {
	            rev=rev+A.charAt(i);
	             
	        }
	        
	         System.out.print(rev);
	        if(A.equals(rev))
	        {
	            System.out.print("Yes");
	        }
	        else
	        {
	              System.out.print("No");
	        }
	}

}
